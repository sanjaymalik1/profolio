// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// User model - minimal app-level data (Clerk handles authentication)
// The 'id' field should match Clerk's userId
model User {
  id        String   @id @map("_id") // Clerk userId (not auto-generated)
  email     String   @unique
  name      String?
  image     String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Application data
  profile    Profile?
  portfolios Portfolio[]

  @@map("users")
}

// User profile information
model Profile {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @unique // References Clerk userId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  firstName String?
  lastName  String?
  bio       String?
  phone     String?
  location  String?
  website   String?
  linkedin  String?
  github    String?
  twitter   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("profiles")
}

// Portfolio model for user portfolios
model Portfolio {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String // Clerk userId reference
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  title           String
  slug            String    @unique
  customSlug      String? // User-customizable slug for vanity URLs (unique handled in code)
  template        String    @default("default")
  isPublic        Boolean   @default(false)
  content         Json? // Portfolio content as JSON
  viewCount       Int       @default(0)
  publishedAt     DateTime? // When portfolio was first published
  lastPublishedAt DateTime? // When content was last updated while published

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("portfolios")
}

// Enums
enum Role {
  USER
  ADMIN
}
